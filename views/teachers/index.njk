{% extends 'layout.njk' %}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Teacher</th>
          <th>Accompaniment</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
        <tr>
          <td>
            <span style="background-image: url({{ teacher.avatar_url }})" ></span>
            {{ teacher.name }}
          </td>
          <td id="expertises">

            {% for expertise in teacher.expertises.slice(0, 4) %}
              {% if loop.index0 >= 3 %}
                <p>...</p>
              {% endif %}
              {% if loop.index0 < 3 %}
                <p>{{ expertise }}</p>
              {% endif %}
            {% endfor %}

          </td>
          <td><a href="/teachers/{{ teacher.id }}">ver</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}