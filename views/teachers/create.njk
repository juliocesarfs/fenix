{% extends 'layout.njk' %}

{% block content %}
  <form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/10553730/600x600) no-repeat center center /cover">
    </section>

    <section class="details">
      <h3>New Teacher</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input 
            type="url" 
            name="avatar_url"
            placeholder="http://"
          >
        </div>
      </div>

      <div class="item">
        <div>Name</div>
        <div>
          <input 
            type="text" 
            name="name"
            placeholder="Teacher name"
          >
        </div>
      </div>

      <div class="item">
        <div>Birth date</div>
        <div>
          <input 
            type="date" 
            name="birth" 
          >
        </div>
      </div>

      <div class="item">
        <div>Educational level</div>
        <div>
          <select name="education_level">
            <option value="high_school" selected>High school</option>
            <option value="university_education">University education</option>
            <option value="master_degree">Master</option>
            <option value="doctorate_degree">Doctorate degree</option>
          </select>
        </div>
      </div>

      <div class="item">
        <div>Class type</div>
        <div>
          <span>
            <input type="radio" name="class_type" value="presential" checked>
            Presential
          </span>
          <span>
            <input type="radio" name="class_type" value="distance">
            Distance
          </span>
        </div>
      </div>

      <div class="item">
        <div>Expertise area</div>
        <div>
          <input 
            type="text" 
            name="services"
            placeholder="Separate each expertise area with a comma"
          >
        </div>
      </div>

      <button type="submit">Save</button>
    </section>
  </form>
{% endblock content %}