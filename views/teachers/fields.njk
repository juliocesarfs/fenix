<div class="item">
  <div>Avatar URL</div>
  <div>
    <input 
      type="url" 
      name="avatar_url"
      placeholder="http://"
      value="{{ teacher.avatar_url }}"
    >
  </div>
</div>

<div class="item">
  <div>Name</div>
  <div>
    <input 
      type="text" 
      name="name"
      placeholder="Teacher name"
      value="{{ teacher.name }}"
    >
  </div>
</div>

<div class="item">
  <div>Birth date</div>
  <div>
    <input 
      type="date" 
      name="birth"
      value="{{ teacher.birth }}" 
    >
  </div>
</div>

<div class="item">
  <div>Educational level</div>
  <div>
    <select name="education_level">
      <option value="school" {% if teacher.education_level == "school" %} selected {% endif %}>High school</option>
      <option value="university" {% if teacher.education_level == "university" %} selected {% endif %}>University education</option>
      <option value="master" {% if teacher.education_level == "master" %} selected {% endif %}>Master</option>
      <option value="doctorate" {% if teacher.education_level == "doctorate" %} selected {% endif %}>Doctorate degree</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Class type</div>
  <div>
    <span>
      <input type="radio" name="class_type" value="presential" checked>
      Presential
    </span>
    <span>
      <input type="radio" name="class_type" value="distance">
      Distance
    </span>
  </div>
</div>

<div class="item">
  <div>Expertise area</div>
  <div>
    <input 
      type="text" 
      name="expertises"
      placeholder="Separate each expertise area with a comma"
    >
  </div>
</div>

<button type="submit">Save</button>